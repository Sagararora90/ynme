{
  "manifest_version": 3,
  "name": "ynme",
  "version": "2.0",
  "description": "Control media across devices in real-time.",
  "permissions": ["tabs", "scripting", "storage", "tabCapture", "offscreen", "webNavigation"],
  "host_permissions": [
    "<all_urls>",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "all_frames": true
    }
  ],
  "icons": {
    "128": "icons/icon128.png"
  }
}
